<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="186dp"
        android:onClick="refAndLoadmore"
        android:text="TO:刷新&amp;加载"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="139dp"/>

    <TextView
        android:id="@+id/who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:gravity="center"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="182dp"
        android:layout_height="58dp"
        android:layout_x="93dp"
        android:layout_y="409dp"
        android:onClick="login"
        android:text="登录"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="433dp"/>

    <EditText
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="277dp"
        android:ems="10"
        android:hint="account"
        android:inputType="phone"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="296dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="153dp"
        android:layout_y="119dp"
        android:onClick="toZXingLib"
        android:text="QRCode"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="117dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="155dp"
        android:layout_y="193dp"
        android:onClick="showPop"
        tools:layout_editor_absoluteX="33dp"
        android:text="popwindow"
        tools:layout_editor_absoluteY="123dp"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="3dp"
        android:layout_y="45dp"
        android:onClick="toChooesePics"
        android:text="to:图片选择"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="53dp"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="158dp"
        android:layout_y="32dp"
        android:onClick="greenDao"
        android:text="greenDao"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="49dp"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="11dp"
        android:layout_y="123dp"
        android:text="TO:gif加载"
        android:onClick="gifLoading"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="139dp"/>

</AbsoluteLayout>